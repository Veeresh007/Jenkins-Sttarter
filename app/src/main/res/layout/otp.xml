<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/otpLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/otpCodeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/article_top_margin_large"
        android:background="@drawable/white_edittext_shape_no_corners"
        android:hint="@string/OTP_code"
        android:padding="@dimen/article_top_margin_medium"
        android:textColorHint="@color/lightGrey"
        android:textSize="@dimen/text_medium" />

</LinearLayout>